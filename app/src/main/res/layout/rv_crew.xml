<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/crewCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        card_view:cardUseCompatPadding="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:id="@+id/crew_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                card_view:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/crewImage"/>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/crewName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:paddingTop="15dp"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/crew_semester_department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:paddingTop="15dp"
                            android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/crew_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                card_view:cardUseCompatPadding="true">
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            card_view:srcCompat="@drawable/ic_outline_phone_24px"
                            android:id="@+id/contact_number_icon"/>
                    <TextView
                            android:id="@+id/crew_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:paddingLeft="15dp"
                            android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            card_view:srcCompat="@drawable/ic_outline_email_24px"
                            android:id="@+id/email_icon"/>
                    <TextView
                            android:id="@+id/crew_email"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:paddingLeft="15dp"
                            android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>