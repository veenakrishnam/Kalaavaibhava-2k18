<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:card_view="http://schemas.android.com/apk/res-auto"
             tools:context=".HomeFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:id="@+id/home_card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textSize="20dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:id="@+id/home_greeting"
                            android:text="Welcome Back"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingBottom="15dp"
                            android:textStyle="italic"
                            android:paddingRight="15dp"

                            android:text="Kalaavaibhava 2k18 awaits you !!!"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="50dp"
                        card_view:srcCompat="@drawable/ic_outline_chrome_reader_mode_24px"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:text="ABOUT"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:id="@+id/home_card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/about_kalaavaibhava"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="50dp"
                        card_view:srcCompat="@drawable/ic_outline_today_24px"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:text="SCHEDULE"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:id="@+id/home_card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:id="@+id/schedule_image"
                        android:src="@drawable/schedule"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>