<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_profile"
        tools:context=".ProfileActivity"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:id="@+id/profile_card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:id="@+id/profileImage"/>

                    <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/profileName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:paddingTop="15dp"
                                android:textAlignment="center"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/profileCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_email_24px"
                                android:id="@+id/email_icon"/>

                        <TextView
                                android:text="Email"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/profileEmail"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_phone_24px"
                                android:id="@+id/contact_icon"/>

                        <TextView
                                android:text="Phone Number"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/profileNumber"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/profileCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_school_24px"
                                android:id="@+id/college_icon"/>

                        <TextView
                                android:text="College"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/profileCollege"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>