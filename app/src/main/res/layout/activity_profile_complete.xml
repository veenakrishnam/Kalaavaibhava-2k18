<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileCompleteActivity"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:paddingTop="100dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">
                <androidx.cardview.widget.CardView
                        android:id="@+id/profileCompleteCard1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        card_view:cardUseCompatPadding="true">

                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical">
                        <LinearLayout
                                android:paddingTop="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    card_view:srcCompat="@drawable/ic_outline_phone_24px"
                                    android:id="@+id/phone_number_icon"/>

                            <TextView
                                    android:text="Phone Number"
                                    android:paddingLeft="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:paddingTop="5dp"
                                android:paddingLeft="24dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/profileEditPhoneNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:inputType="number"
                                    android:paddingBottom="5dp"
                                    android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/profileCompleteCard2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        card_view:cardUseCompatPadding="true">

                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical">
                        <LinearLayout
                                android:paddingTop="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    card_view:srcCompat="@drawable/ic_outline_school_24px"
                                    android:id="@+id/college_icon"/>

                            <TextView
                                    android:text="College"
                                    android:paddingLeft="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:paddingTop="5dp"
                                android:paddingLeft="24dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/profileEditCollege"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingBottom="5dp"
                                    android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                        android:text="FINISH"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/profileCompleteButton"
                        android:backgroundTint="@color/buttonBackground"
                        android:onClick="completeProfile"
                        android:textColor="@color/buttonColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>