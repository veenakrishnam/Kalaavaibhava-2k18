<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:padding="25dp"
            android:layout_height="match_parent">

    <ImageView
            android:padding="5dp"
            android:id="@+id/theme1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle1"
            android:onClick="changeThemeColor"/>
    <TextView
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:layout_width="60dp" />

    <ImageView
            android:id="@+id/theme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle2" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Violet"
            android:textAlignment="center" />

    <ImageView
            android:id="@+id/theme3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle3" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Red"
            android:textAlignment="center" />

    <ImageView
            android:id="@+id/theme4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle4" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:text="Cement"
            android:textAlignment="center" />

    <ImageView
            android:id="@+id/theme5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle5" />

    <TextView
            android:id="@+id/textView9"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="White"
            android:textAlignment="center" />

    <ImageView
            android:id="@+id/theme6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle6" />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Cyan"
            android:textAlignment="center" />

    <ImageView
            android:id="@+id/theme7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle7" />

    <TextView
            android:id="@+id/textView11"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Green"
            android:textAlignment="center" />

    <ImageView
            android:id="@+id/theme8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="changeThemeColor"
            android:padding="5dp"
            android:src="@drawable/circle8" />

    <TextView
            android:id="@+id/textView12"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:text="Gold"
            android:textAlignment="center" />

</GridLayout>