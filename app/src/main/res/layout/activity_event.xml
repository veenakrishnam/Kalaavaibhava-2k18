<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:id="@+id/eventCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    card_view:cardUseCompatPadding="true">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/eventImage"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/eventCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">
                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_today_24px"
                                android:id="@+id/date_icon"/>

                        <TextView
                                android:text="Date"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/eventDate"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_alarm_24px"
                                android:id="@+id/time_icon"/>

                        <TextView
                                android:text="Time"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/eventTime"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/eventCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_assessment_24px"
                                android:id="@+id/quote_icon"/>

                        <TextView
                                android:text="Quote"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/eventQuote"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/eventCard4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_description_24px"
                                android:id="@+id/rules_icon"/>

                        <TextView
                                android:text="Rules"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/eventRules"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/eventCard5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_people_24px"
                                android:id="@+id/student_co_ordinators_icon"/>

                        <TextView
                                android:text="Student Co-ordinators"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/eventStudentCoordinators"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/eventCard6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    card_view:cardUseCompatPadding="true">

                <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                card_view:srcCompat="@drawable/ic_outline_supervisor_account_24px"
                                android:id="@+id/faculty_co_ordinators_icon"/>

                        <TextView
                                android:text="Faculty Co-ordinators"
                                android:paddingLeft="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingLeft="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/eventFacultyCoordinators"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/register_fab"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_outline_how_to_reg_24px"
            app:backgroundTint="?attr/colorAccent"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>